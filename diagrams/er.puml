@startuml
!includeurl https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Component.puml

title Warm House ER Diagram

entity User {
  * id : UUID
  * email : String
  * password : String
  * role : String
}

entity House {
  * id : UUID
  * address : String
  * user_id : UUID
}

entity Device {
  * id : UUID
  * serial_number : String
  * type : String
  * house_id : UUID
  * status : String
}

entity Telemetry {
  * id : UUID
  * device_id : UUID
  * timestamp : DateTime
  * data : String
}

User ||--o{ House : owns
House ||--o{ Device : contains
Device ||--o{ Telemetry : generates

@enduml